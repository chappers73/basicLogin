            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="What is the server address"
            android:title="Server Address" />

    </PreferenceCategory>


    <!-- This PreferenceScreen tag serves as a screen break (similar to page break
         in word processing). Like for other preference types, we assign a key
         here so it is able to save and restore its instance state. -->
    <PreferenceScreen
        android:key="screen_preference"
        android:summary="Remote camera configurations"
        android:title="Camera Settings">


        <!-- Camera 1 New Preference Page -->
        <PreferenceScreen
            android:key="screen_preference"
            android:summary="Remote camera configuration"
            android:title="Camera 1">
            <PreferenceCategory android:title="@string/Prefs_Title_Camera_Title">

                <EditTextPreference
                    android:defaultValue="Where am I"
                    android:key="@string/prefs_et_Camera_1_Name"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:summary="Camera Name"
                    android:title="Firendly Name of the Camera i.e. Front Door" />

                <EditTextPreference
                    android:defaultValue="username"
                    android:key="@string/prefs_et_Camera_1_Username"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:summary="Camera Username"
                    android:title="Camera Username" />

                <EditTextPreference
                    android:defaultValue="password"
                    android:inputType="textPassword"
                    android:key="@string/prefs_et_Camera_1_Password"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:summary="Camera Password"
                    android:title="Camera Password" />

                <EditTextPreference
                    android:defaultValue="Server Address"
                    android:key="@string/prefs_et_Camera_1_URL"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:summary="Camera IP Address and port"
                    android:title="Camera IP address and port" />

                <CheckBoxPreference
                    android:key="@string/prefs_chk_Camera1_Enabled"
                    android:summary="Is the Camera Enabled"
                    android:title="Enable Camera" />
            </PreferenceCategory>
        </PreferenceScreen>

