<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">


    <EditTextPreference
        android:key="edit_text_preference_username"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="Enter your name"
        android:title="What is your name?" />

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="check_box_preference_remember"
        android:summary="Do you want to remember username?"
        android:title="Remember Username etc" />

    <ListPreference
        android:entries="@array/list"
        android:entryValues="@array/lValues"
        android:key="list"
        android:summary="A list to choose from"
        android:title="list"></ListPreference>
</PreferenceScreen>